# Environment Variables Template
# Copy this file to .env and update the values

# Timezone
TZ=America/Mexico_City

# Database Configuration
DB_URL=postgresql+asyncpg://news:news@postgres:5432/news
REDIS_URL=redis://redis:6379/0
OPENSEARCH_URL=http://opensearch:9200

# WordPress Integration
WP_BASE_URL=https://your-wordpress.com
WP_USER=bot
WP_APP_PASSWORD=xxxx

# Facebook Integration
FB_PAGE_ID=1234567890
FB_PAGE_TOKEN=EAAG...

# Logging
LOG_LEVEL=INFO
# SERVICE_NAME=ingestor
# SERVICE_PORT=8001
SERVICE_HOST=0.0.0.0

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# OpenAI API for content rewriting and analysis
# OPENAI_API_KEY=sk-...

# News API for additional news sources
# NEWS_API_KEY=your_news_api_key

# Google News API (if using)
# GOOGLE_NEWS_API_KEY=your_google_api_key

# Twitter API (for social media integration)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# TWITTER_ACCESS_TOKEN=your_access_token
# TWITTER_ACCESS_SECRET=your_access_secret

# =============================================================================
# CONTENT PROCESSING SETTINGS
# =============================================================================
# Maximum articles to process per batch
MAX_ARTICLES_PER_BATCH=50

# Content processing timeout (seconds)
PROCESSING_TIMEOUT=300

# Image processing settings
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,png,webp

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Sentry for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT secret for API authentication
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development features
DEV_MODE=true

# Auto-reload services on code changes
AUTO_RELOAD=true

# Skip SSL verification for development APIs
SKIP_SSL_VERIFY=true

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# DATABASE_ECHO=false
# AUTO_RELOAD=false
# SKIP_SSL_VERIFY=false

# Production database with connection pooling
# DATABASE_URL=postgresql+asyncpg://newsbot:secure_password@prod-db:5432/newsbot?pool_size=20&max_overflow=30

# Production Redis with password
# REDIS_URL=redis://:secure_password@prod-redis:6379/0

# Production Temporal cluster
# TEMPORAL_HOST=temporal-cluster.internal
# TEMPORAL_PORT=7233

# Production OpenSearch with authentication
# OPENSEARCH_HOST=opensearch-cluster.internal
# OPENSEARCH_USERNAME=newsbot
# OPENSEARCH_PASSWORD=secure_password
# OPENSEARCH_USE_SSL=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_AI_REWRITING=true
FEATURE_IMAGE_PROCESSING=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_TREND_DETECTION=true
FEATURE_AUTO_PUBLISHING=false

# =============================================================================
# LOCALIZATION
# =============================================================================
# Default language for content processing
DEFAULT_LANGUAGE=es

# Supported languages for translation
SUPPORTED_LANGUAGES=es,en

# Mexican business context settings
BUSINESS_REGION=MX
CURRENCY=MXN
DATE_FORMAT=dd/mm/yyyy

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Worker process settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# Cache TTL settings (seconds)
CACHE_TTL_ARTICLES=3600
CACHE_TTL_TRENDS=1800
CACHE_TTL_SOURCES=7200

# Batch processing limits
MAX_CONCURRENT_DOWNLOADS=10
MAX_CONCURRENT_PROCESSES=5

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
# File storage settings
MEDIA_ROOT=/app/media
BACKUP_ROOT=/app/backups

# Cloud storage (if using S3/GCS)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_STORAGE_BUCKET_NAME=newsbot-media
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
# SMTP settings for email notifications
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=true
# DEFAULT_FROM_EMAIL=newsbot@windworldwire.com

# =============================================================================
# WEBHOOK SETTINGS
# =============================================================================
# Webhook URLs for external integrations
# WEBHOOK_ARTICLE_PUBLISHED=https://your-site.com/webhooks/article-published
# WEBHOOK_TRENDING_DETECTED=https://your-site.com/webhooks/trending
# WEBHOOK_ERROR_OCCURRED=https://your-site.com/webhooks/error

# =============================================================================
# INGESTOR SERVICE SETTINGS
# =============================================================================
# Enable manual pipeline runs via API (useful for testing)
ALLOW_MANUAL_RUN=true

# Service configuration
SERVICE_NAME=ingestor
SERVICE_VERSION=0.1.0
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8001